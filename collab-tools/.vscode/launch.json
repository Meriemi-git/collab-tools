{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Attach to Chrome",
      "port": 4200,
      "request": "attach",
      "type": "pwa-chrome",
      "webRoot": "${workspaceFolder}"
    },
    {
      "request": "launch",
      "name": "Frontend",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "type": "firefox",
      "reAttach": true,
      "profile": "dev-edition-default",
      "firefoxExecutable": "C:\\Program Files\\Firefox Developer Edition\\firefox.exe",
      "pathMappings": [
        {
          "url": "http://localhost:4200",
          "path": "${workspaceFolder}"
        }
      ]
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "Admin",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "profile": "default-release",
      "pathMappings": [
        {
          "url": "webpack:///libs",
          "path": "${workspaceFolder}/libs"
        },
        {
          "url": "webpack:///libs",
          "path": "${workspaceFolder}/libs"
        },
        {
          "url": "webpack:///apps/admin/src",
          "path": "${workspaceFolder}/apps/admin/src"
        },
        {
          "url": "webpack:///libs",
          "path": "${workspaceFolder}/libs"
        },
        {
          "url": "webpack:///src",
          "path": "${workspaceFolder}/apps/admin/src"
        }
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Backend",
      "port": 3334,
      "restart": true,
      "outFiles": ["${workspaceFolder}/dist/apps/backend/**/*.js"],
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
